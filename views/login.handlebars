<!-- Login -->
   <section> 
    <div class="row ">
        <div class="col-med-6 mb-3 mb-sm-0 ">
          <div class="card">
            <div class="card-body ">
                   <form id="login">
                    <label class="label">Login</label>
                    <br>
                    <div class="row mb-3">
                      <label for="loginUser" class="col-sm-2 col-form-label">Username</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control" id="loginUser">
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="loginPassword" class="col-sm-2 col-form-label">Password</label>
                      <div class="col-sm-10">
                        <input type="password" class="form-control" id="loginPassword">
                      </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Sign in</button>
                  </form>
            </div>
          </div>
        </div>
    </section>
    <br>

    <!-- Sign up -->
    <section> 
        <div class="row ">
            <div class="col-med-6 mb-3 mb-sm-0 ">
              <div class="card">
